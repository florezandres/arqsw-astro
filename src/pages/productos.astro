---
import Layout from "../layouts/Layout.astro";

 const res = await fetch('http://localhost:8081/v1/products');
 if (!res.ok) {
  throw new Error(`Error al obtener productos: ${res.status}`);
}
const data = await res.json();


interface Product {
  name: string;
  description: string;
  price: number;
}

const products: Product[] = data.products.sort((a: { name: string; }, b: { name: any; }) => a.name.localeCompare(b.name));

const handleClick = (name: string) => {
  console.log(name);
  const url = new URL(location.href);
  url.pathname = `/productos/producto`;
  url.searchParams.set('name', name);
  location.href = url.toString();
};
---

<Layout title="Productos">
  <h1>Inventario de productos</h1>
  <p>Listado de productos</p>
  <button>Agregar producto a inventario</button>
  {products?.length ? (
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripcion</th>
          <th>Precio</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {products?.map((product: Product) => (
          <tr onclick={`javascript:handleClick('${product.name}')`}>
            <td><strong>{product.name}</strong></td>
            <td>{product.description}</td>
            <td>${product.price}</td>
            <td>
              <button id="editar" class="icon-button" title="Editar">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-edit"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" /><path d="M16 5l3 3" /></svg>
              </button>
              <button id="borrar" class="icon-button" title="Eliminar">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
              </button>
              <button id="buscar" class="icon-a" title="Buscar">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-zoom-in"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" /><path d="M7 10l6 0" /><path d="M10 7l0 6" /><path d="M21 21l-6 -6" /></svg>
              </button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  ) : (
    <p>No hay productos en el inventario</p>
  )}
</Layout>

<style>

  h1 {
    margin-top: 5rem;
    margin-bottom: 2.5rem;
    text-align: center;
  }

  table {
    width: 90%;
    border-collapse: collapse;
    margin: 0 auto;
  }

  th,
  td {
    padding: 10px;
    text-align: center;
    border: 1px solid #ccc;
  }

  th {
    background-color: rgb(63, 65, 77);;
  }

  button {
    border: none;
    border-radius: 1rem;
    padding: 0.5rem;
  }
  
  button:hover {
    cursor: pointer;
  }

  #editar {
    color: white;
    background-color: #007bff;
  }

  #borrar {
    color: white;
    background-color: #dc3545;
  }

  #buscar {
    color: white;
    background-color: #424365;
  }

</style>

